use std::sync::mpsc::{Receiver, Sender};
use std::c

struct Task;
struct ConstantTable;

struct WorkerHandle {
  outbox     : Sender<WorkerCommand>,
  task_count : u32,
}

enum WorkerReport {
  Dead,
  Asleep,
  Available,
  Okay
}

enum WorkerCommand {
  SpawnTask( Task ),
  Die
}

struct Worker {
  rewrites : u32,
  tasks    : Vec<Task>,
  current_task : Option<&mut Task>
}

struct Scheduler {
  worker_handles : Vec<WorkerHandle>,
  rewrite_quota  : u32,
  inbox          : Receiver<WorkerReport>
}

struct Runtime {
  schedulers : Scheduler,
  constants  : Arc<ConstantTable>
}
